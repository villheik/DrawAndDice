<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.root.drawdice">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".mainView"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".aboutView"
            android:label="About"
            android:screenOrientation="portrait"/>

        <activity android:name=".cardView"
            android:label="Cards"
            android:screenOrientation="portrait"/>

        <activity android:name=".coinView"
            android:label="Coin"
        android:screenOrientation="portrait"/>

        <activity android:name=".diceView"
            android:label="Dice"
            android:screenOrientation="portrait"/>

        <activity android:name=".cardSettings"
            android:screenOrientation="portrait"/>

        <activity android:name=".diceSettings"
            android:screenOrientation="portrait"/>


    </application>

</manifest>